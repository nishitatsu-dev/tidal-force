<div role="dialog" tabindex="-1" class="fixed inset-0 z-30 flex items-center justify-center w-full h-screen p-2">
  <div class="fixed inset-0 block w-full h-screen cursor-default bg-gray-900/30"></div>
  <div class="relative z-20 w-full max-w-xs max-h-screen overflow-y-auto bg-white shadow-lg rounded-md p-5">
    <h2 class="mb-5 text-center text-xl"><%= t(".change_your_password") %></h2>

    <div class="mb-7">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="text-center">
          <div class="inline-flex flex-col">
            <div class="field flex flex-col mb-4">
              <%= f.label :password, t(".new_password"), class: "self-start" %>
              <% if @minimum_password_length %>
                <em class="self-start"><%= t("devise.shared.minimum_password_length", count: @minimum_password_length) %></em>
              <% end %>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "border rounded-sm" %>
            </div>

            <div class="field flex flex-col mb-4">
              <%= f.label :password_confirmation, t(".confirm_new_password"), class: "self-start" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "border rounded-sm" %>
            </div>

            <div class="actions">
              <%= f.submit t(".change_my_password"), class: "py-1.5 px-4 transition-colors bg-indigo-600 font-medium text-white shadow-xs rounded-sm hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <hr class="mb-7">

    <div class="mx-2">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
