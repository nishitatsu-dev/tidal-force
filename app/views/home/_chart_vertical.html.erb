<script type="module">
  import * as echarts from "echarts";

  var chartDom = document.getElementById('chart_vertical');
  var myChart = echarts.init(chartDom);
  var option;

  const moonVerticals = sessionStorage.getItem('moonVerticals').split(',').map(Number);
  const sunVerticals = sessionStorage.getItem('sunVerticals').split(',').map(Number);
  const moonAndSunVerticals = sessionStorage.getItem('moonAndSunVerticals').split(',').map(Number);
  const jupiterDistances = sessionStorage.getItem('jupiterDistances').split(',').map(Number);
  const xAxisData = sessionStorage.getItem('xAxisData').split(',');

  option = {
    tooltip: {
      trigger: 'axis',
      axisPointer: {
        type: 'cross',
        label: {
          backgroundColor: '#6a7985'
        }
      }
    },
    legend: {
      data: ['Moon', 'Sun', 'Moon + Sun', 'Jupiter (Distance)']
    },
    toolbox: {
      feature: {
        saveAsImage: {}
      }
    },
    grid: {
      left: '3%',
      right: '4%',
      bottom: '14%',
      containLabel: true
    },
    dataZoom: [
      {
        type: 'inside',
        start: 0,
        end: 50
      },
      {
        type: 'slider',
        start: 0,
        end: 50
      }
    ],
    xAxis: [
      {
        type: 'category',
        boundaryGap: false,
        data: xAxisData
      }
    ],
    yAxis: [
      {
        type: 'value',
        name: 'Tidal Force [m/s^2]',
        max: 0.000002,
        min: -0.000001,
        axisLine: {
          show: true,
          lineStyle: {
            color: 'rgb(111, 149, 255)'
          }
        }
      },
      {
        type: 'value',
        name: 'Distance [au]',
        position: 'right',
        max: 6.8,
        min: 3.8,
        alignTicks: true,
        axisLine: {
          show: true,
          lineStyle: {
            color: 'rgb(28, 191, 115)'
          }
        }
      }
    ],
    series: [
      {
        name: 'Moon',
        type: 'line',
        color: 'rgb(255, 191, 0)',
        emphasis: {
          focus: 'series'
        },
        data: moonVerticals
      },
      {
        name: 'Sun',
        type: 'line',
        color: 'rgb(250, 0, 135)',
        emphasis: {
          focus: 'series'
        },
        data: sunVerticals
      },
      {
        name: 'Moon + Sun',
        type: 'line',
        lineStyle: {
          width: 0
        },
        symbol: 'none',
        areaStyle: {
          opacity: 0.8,
          color: new echarts.graphic.LinearGradient(0, 0, 0, 1, [
            {
              offset: 0,
              color: 'rgb(55, 162, 255)'
            },
            {
              offset: 1,
              color: 'rgb(116, 21, 219)'
            }
          ])
        },
        emphasis: {
          focus: 'series'
        },
        data: moonAndSunVerticals
      },
      {
        name: 'Jupiter (Distance)',
        type: 'line',
        yAxisIndex: 1,
        symbol: 'none',
        lineStyle: {
          color: 'rgb(128, 255, 165)',
          width: 4,
          opacity: 0.8
        },
        emphasis: {
          focus: 'series'
        },
        data: jupiterDistances
      }
    ]
  };

  option && myChart.setOption(option);

</script>
