<%= form_with scope: :record, method: :get do |f| %>
  <%= f.label :location, "Location" %>
  <%= f.select :location, [["稚内", "wakkanai"], ["青森", "aomori"], ["東京", "tokyo"], ["明石", "akashi"], ["鹿児島", "kagoshima"], ["那覇", "naha"], ["石垣", "ishigaki"]], { selected: "akashi" } %><br />
  <%= f.label :start_at, "Start" %>
  <%= f.date_field :start_at %><br />
  <%= f.label :end_at, "End" %>
  <%= f.date_field :end_at %><br />
  <%= f.checkbox :sun_checkbox %>
  <%= f.label :sun_checkbox, "Sun" %>
  <%= f.checkbox :moon_checkbox %>
  <%= f.label :moon_checkbox, "Moon" %>
  <%= f.checkbox :jupiter_checkbox %>
  <%= f.label :jupiter_checkbox, "Jupiter" %><br />
  <%= f.submit  "計算する", { id: "calc_button" } %>
<% end %>

<div id="chart_vertical" style="width: 600px;height:400px;"></div>
<%= render "chart_vertical" %>

