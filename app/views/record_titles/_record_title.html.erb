<%= turbo_frame_tag "record_title_#{record_title.column_number}" do %>
  <div class="grid grid-rows-3 h-20 justify-start items-center border-r border-gray-300">
    <div class="flex justify-left gap-3 text-nowrap">
      <% if record_title.id.nil? %>
        <%= link_to "編集", new_record_title_path(column_number: record_title.column_number), data: { turbo_frame: "record_title_#{record_title.column_number}" } %>
      <% else %>
        <%= link_to "編集", edit_record_title_path(record_title), data: { turbo_frame: "record_title_#{record_title.column_number}" } %>
        <%= button_to "削除", record_title, method: :delete, data: { turbo_confirm: "本当に削除しますか？" }, class: "btn-record-primary" %>
      <% end %>
    </div>
    <div class="row-span-2 text-left text-wrap h-12 overflow-y-auto">
      <%= display_line_breaks record_title.title %>
    </div>
  </div>
<% end %>
