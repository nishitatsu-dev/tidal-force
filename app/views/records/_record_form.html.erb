<%= turbo_frame_tag "record_#{extract_date_hour(record)}" do %>
  <div role="dialog" tabindex="-1" class="fixed inset-0 z-30 flex items-center justify-center w-full h-screen p-2">
    <div class="fixed inset-0 block w-full h-screen cursor-default bg-gray-900/30"></div>
    <div class="relative z-20 max-w-xs max-h-screen overflow-y-auto bg-white shadow-lg rounded-md">
      <div class="w-memo place-self-center m-2">
        <div class="flex gap-2 my-2">
          <div>time :</div>
          <div>
            <%= record.recorded_at.in_time_zone(session[:timezone]).strftime("%H:%M") %>
          </div>
        </div>
        <%= form_with model: record do |f| %>
          <div class="grid grid-rows-6 gap-4">
            <div class="grid grid-rows-2">
              <%= f.label :column_0, "#{@record_titles[0].title}" %>
              <%= f.text_field :column_0, class: "rounded-md border ring-gray-300 cursor-pointer" %>
            </div>
            <div class="grid grid-rows-2">
              <%= f.label :column_1, "#{@record_titles[1].title}" %>
              <%= f.text_field :column_1, class: "rounded-md border ring-gray-300 cursor-pointer" %>
            </div>
            <div class="grid grid-rows-2">
              <%= f.label :column_2, "#{@record_titles[2].title}" %>
              <%= f.text_field :column_2, class: "rounded-md border ring-gray-300 cursor-pointer" %>
            </div>
            <div class="grid grid-rows-2">
              <%= f.label :column_3, "#{@record_titles[3].title}" %>
              <%= f.text_field :column_3, class: "rounded-md border ring-gray-300 cursor-pointer" %>
            </div>
            <div class="grid grid-rows-2">
              <%= f.label :column_4, "#{@record_titles[4].title}" %>
              <%= f.text_field :column_4, class: "rounded-md border ring-gray-300 cursor-pointer" %>
            </div>
            <div class="grid grid-rows-2">
              <%= f.label :column_5, "#{@record_titles[5].title}" %>
              <%= f.text_field :column_5, class: "rounded-md border ring-gray-300 cursor-pointer" %>
            </div>
          </div>
          <div class="flex flex-col my-2">
            <%= f.label :memo, "memo" %>
            <%= f.text_area :memo, class: "text-wrap overflow-y-auto rounded-md border ring-gray-300 cursor-pointer" %>
          </div>
          <%= f.hidden_field :recorded_at %>
          <div class="flex gap-2 justify-center items-center flex-none">
            <%= f.submit "更新", class: "link-primary self-center" %>
            <%= link_to "キャンセル", record, class: "link-primary self-center" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
