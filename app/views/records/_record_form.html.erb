<%= turbo_frame_tag "record_#{extract_date_hour(record)}" do %>
  <div role="dialog" tabindex="-1" class="fixed inset-0 z-30 flex items-center justify-center w-full h-screen p-2">
    <div class="fixed inset-0 block w-full h-screen cursor-default bg-gray-900/30"></div>
    <div class="relative z-20 max-w-sm max-h-screen overflow-y-auto bg-white shadow-lg rounded-md">
        <div class="mx-2">
          <div class="flex gap-2 my-3">
            <div>time :</div>
            <div>
              <%= record.recorded_at.in_time_zone(session[:timezone]).strftime("%H:%M") %>
            </div>
          </div>
          <p class="text-xs bg-emerald-200">※数値入力範囲：9999.999 ~ -999.999</p>
        </div>
        <%= form_with model: record do |f| %>
          <div class="mx-2">
            <div class="grid grid-rows-6 gap-2 mb-3">
              <div class="grid grid-rows-2">
                <%= f.label :column_0, "#{@record_titles[0].title} :", class: "w-full truncate text-left" %>
                <%= f.text_field :column_0, type: "number", step: "0.001", min: "-999.999", max: "9999.999", class: "rounded-md border ring-gray-300 cursor-pointer" %>
              </div>
              <div class="grid grid-rows-2">
                <%= f.label :column_1, "#{@record_titles[1].title} :", class: "w-full truncate text-left" %>
                <%= f.text_field :column_1, type: "number", step: "0.001", min: "-999.999", max: "9999.999", class: "rounded-md border ring-gray-300 cursor-pointer" %>
              </div>
              <div class="grid grid-rows-2">
                <%= f.label :column_2, "#{@record_titles[2].title} :", class: "w-full truncate text-left" %>
                <%= f.text_field :column_2, type: "number", step: "0.001", min: "-999.999", max: "9999.999", class: "rounded-md border ring-gray-300 cursor-pointer" %>
              </div>
              <div class="grid grid-rows-2">
                <%= f.label :column_3, "#{@record_titles[3].title} :", class: "w-full truncate text-left" %>
                <%= f.text_field :column_3, type: "number", step: "0.001", min: "-999.999", max: "9999.999", class: "rounded-md border ring-gray-300 cursor-pointer" %>
              </div>
              <div class="grid grid-rows-2">
                <%= f.label :column_4, "#{@record_titles[4].title} :", class: "w-full truncate text-left" %>
                <%= f.text_field :column_4, type: "number", step: "0.001", min: "-999.999", max: "9999.999", class: "rounded-md border ring-gray-300 cursor-pointer" %>
              </div>
              <div class="grid grid-rows-2">
                <%= f.label :column_5, "#{@record_titles[5].title} :", class: "w-full truncate text-left" %>
                <%= f.text_field :column_5, type: "number", step: "0.001", min: "-999.999", max: "9999.999", class: "rounded-md border ring-gray-300 cursor-pointer" %>
              </div>
            </div>
            <div class="flex flex-col mb-4">
              <%= f.label :memo, "memo :", class: "self-start" %>
              <p class="inline-block text-xs bg-emerald-200">※最大150文字（改行は1文字に相当）</p>
              <%= f.text_area :memo, maxlength: 150, class: "text-wrap overflow-y-auto rounded-md border ring-gray-300 cursor-pointer" %>
            </div>
            <%= f.hidden_field :recorded_at %>
          </div>
          <div class="px-4 py-3 bg-gray-50 sm:flex sm:justify-center sm:flex-row-reverse sm:px-6">
            <%= f.submit "更新", class: "inline-flex w-full justify-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-xs hover:bg-indigo-500 sm:ml-3 sm:w-23.5 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 cursor-pointer" %>
            <%= link_to "キャンセル", record, class: "mt-3 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-xs ring-1 ring-gray-300 ring-inset hover:bg-gray-50 sm:mt-0 sm:w-23.5 cursor-pointer" %>
          </div>
        <% end %>
    </div>
  </div>
<% end %>
